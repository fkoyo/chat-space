.sidewrapper
  .sideheader
    .menubox
      .menubox__username 
        = current_user.name
      .menubox__icons
        = link_to new_group_path , class:"menubox__icons" do
          = icon('far', 'edit', class:"menubox__icons--creategroup")
        = link_to edit_user_path(current_user), class:"menubox__icons" do
          = icon('fas', 'cog', class:"menubox__icons--setting")
  .sidecontents
    .grouplists
      - current_user.groups.each do |group|
        .grouplists__list
          = link_to group_messages_path(group), class: "edit_link" do
            %p.grouplists__list--groupname
              = group.name
        %p.grouplists__list--latestmessage
          = group.show_last_message